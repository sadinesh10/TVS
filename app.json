{
  "expo": {
    "name": "TVS",
    "slug": "Food2Fork",
    "version": "1.0.0",
    "orientation": "portrait",

    "icon": "./Screens/TVS_Logo.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Allow TVS to access camera.",
        "NSMicrophoneUsageDescription": "Allow TVS to access your microphone"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.CAMERA"
      ],
      "package": "com.saidinesh.Food2Fork"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "Allow TVS to access camera."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "e38503dd-56ac-4c12-9ddb-bb40699c9bc8"
      }
    }
  }
}
